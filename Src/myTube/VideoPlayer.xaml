                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="22">
                              <!--TextBlock.Foreground>
                                <ThemeResource ResourceKey="AccentBrush" />
                              </TextBlock.Foreground--> 
                            </TextBlock>
                          </Grid>
                        </ContentControl>
                           
                      </ListView>
                    </Grid>
                
                    <ProgressBar x:Name="progress" Foreground="White">
