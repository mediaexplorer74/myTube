                        <ContentControl.Content>
                            <Grid HorizontalAlignment="Left" Margin="0,0,0,0">
                                <Grid.Background>
                                    <StaticResource ResourceKey="buttonBackground" />
                                </Grid.Background>
                                <Grid.Height>
                                    <StaticResource ResourceKey="Size" />
                                </Grid.Height>
                                <Grid.Width>
                                    <StaticResource ResourceKey="Size" />
                                </Grid.Width>
                                <ListView>
                                    <SymbolIcon x:Name="symbolIcon"
                                        Symbol="Pause" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Margin="0,0,0,0" />
                                </ListView>
                            </Grid>
                        </ContentControl.Content>
                      </ContentControl-->
                    </Grid>
                 </ListView>


                   
                            
    <TextBlock x:Name="seekInstructions" FontWeight="SemiBold" 
                Foreground="Black" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="19,0,19,3" 
                FontSize="9" 
                Text="swipe left or right on the screen to seek" 
